{
  "name": "hugo-serverless",
  "version": "1.0.0",
  "description": "Hugo, powered by EFS, lambda, and S3",
  "main": "index.js",
  "scripts": {
    "build": "hugo -s siteGen",
    "serve": "hugo server -s siteGen",
    "new": "hugo new -s static-site",
    "deploy-website": "aws s3 sync siteGen/public s3://blog.always-onward.com --delete",
    "test-cdk": "cdk synth",
    "predeploy": "node lib/scripts/pre-deploy.js",
    "deploy": "cdk deploy --all --require-approval never",
    "test-service": "aws s3 cp ../onward-blog/content/_index.md s3://blog.always-onward.com-source/content/_index.md",
    "download-source": "aws s3 sync s3://blog.always-onward.com-source/source source/",
    "upload-source": "aws s3 sync ../onward-blog/content s3://blog.always-onward.com-source/content",
    "test-lambda": "node lambda/test/runIndex.js",
    "test-vpclambda": "cd site && node test/runIndex.js && cd .."
  },
  "dependencies": {
    "@aws-cdk/assert": "^1.130.0",
    "@aws-cdk/aws-cloudfront": "^1.130.0",
    "@aws-cdk/aws-datasync": "^1.130.0",
    "@aws-cdk/aws-events": "^1.130.0",
    "@aws-cdk/aws-events-targets": "^1.130.0",
    "@aws-cdk/aws-route53-targets": "^1.130.0",
    "@aws-cdk/aws-s3": "^1.130.0",
    "@aws-cdk/aws-s3-deployment": "^1.130.0",
    "@aws-cdk/core": "^1.130.0",
    "@aws-cdk/yaml-cfn": "^1.130.0",
    "@types/node": "^10.17.27",
    "aws-cdk": "^1.130.0",
    "aws-sdk": "^2.939.0",
    "cdk-assets": "^1.130.0",
    "hugo-bin": "^0.77.2",
    "toml": "^3.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SeriesOfUnlikelyExplanations/hugo-serverless.git"
  },
  "author": "Tom Woodard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SeriesOfUnlikelyExplanations/hugo-serverless/issues"
  },
  "homepage": "https://github.com/SeriesOfUnlikelyExplanations/hugo-serverless#readme"
}
